generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  role      Role     @default(ADMIN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SuratMasuk {
  id             Int       @id @default(autoincrement())
  noSurat        String
  perihal        String
  alamatPengirim String
  tanggalTerima  DateTime
  sifatSurat     SifatSurat
  fileUrl        String?
  disposisi      String?
  isiDisposisi   String?
  disposisikanKe String?  // Menambahkan field untuk "Disposisikan Ke"
  tenggatWaktu   DateTime? // Menambahkan field untuk "Tenggat Waktu"
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  daftarDisposisi DaftarDisposisi[]
}

model DaftarDisposisi {
  id             Int       @id @default(autoincrement())
  suratMasukId   Int
  disposisikanKe String
  isiDisposisi   String
  tenggatWaktu   DateTime
  createdAt      DateTime  @default(now())

  suratMasuk     SuratMasuk @relation(fields: [suratMasukId], references: [id])
}

model SuratKeluar {
  id             Int       @id @default(autoincrement())
  noSurat        String
  noBerkas       String
  alamatPenerima String
  tanggalKeluar  DateTime
  perihal        String
  noPetunjuk     String
  noPaket        String
  fileUrl        String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN   
  KEPSEK  
}

enum SifatSurat {
  SangatSegera
  Segera
  Biasa
}